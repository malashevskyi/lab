{
  "manifest_version": 3,
  "name": "DeepRead",
  "version": "0.1.0",
  "description": "AI-Powered Contextual Language Learning.",
  "permissions": ["storage", "activeTab", "tabs"],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/features/content/index.tsx"]
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["src/features/gemini-content/index.ts"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://*.ingest.sentry.io https://*.ingest.us.sentry.io https://*.sentry.io ws://localhost:5174"
  },
  "background": {
    "service_worker": "src/features/background/index.tsx",
    "type": "module"
  },
  "host_permissions": ["https://*.sentry.io/*", "https://*.ingest.sentry.io/*"]
}

{
  "name": "code-flashcards",
  "displayName": "Code Flashcards",
  "description": "Create AI-powered flashcards from your code snippets.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:code-flashcards-snippets"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-flashcards.toggleHighlight",
        "title": "Flashcards: Toggle Code Highlight"
      },
      {
        "command": "code-flashcards.generateFlashcard",
        "title": "Flashcards: Generate Flashcard",
        "icon": "$(lightbulb)"
      }
    ],
    "keybindings": [
      {
        "command": "code-flashcards.toggleHighlight",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-flashcards-view-container",
          "title": "Code Flashcards",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "code-flashcards-view-container": [
        {
          "id": "code-flashcards-snippets",
          "name": "Selected Snippets",
          "type": "tree"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "code-flashcards.generateFlashcard",
          "when": "view == code-flashcards-snippets",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Code Flashcards",
      "properties": {
        "code-flashcards.openai.apiKey": {
          "type": "string",
          "description": "Your OpenAI API key to generate flashcards.",
          "default": ""
        },
        "code-flashcards.openai.model": {
          "type": "string",
          "description": "The OpenAI model to use for generation.",
          "default": "gpt-3.5-turbo"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}

{
  "name": "code-flashcards",
  "displayName": "Code Flashcards",
  "publisher": "malashevskyi",
  "description": "Create AI-powered flashcards from your code snippets.",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:code-flashcards-snippets"
  ],
  "files": [
    "out",
    "media"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-flashcards.toggleHighlight",
        "title": "Flashcards: Toggle Code Highlight"
      },
      {
        "command": "code-flashcards.generateFlashcard",
        "title": "Flashcards: Generate Flashcard",
        "icon": "$(lightbulb)"
      },
      {
        "command": "code-flashcards.generateAllFlashcards",
        "title": "Flashcards: Generate Flashcards for All Snippets",
        "icon": "$(send)"
      },
      {
        "command": "code-flashcards.login",
        "title": "Code Flashcards: Login to Supabase"
      }
    ],
    "keybindings": [
      {
        "command": "code-flashcards.toggleHighlight",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-flashcards-view-container",
          "title": "Code Flashcards",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "code-flashcards-view-container": [
        {
          "id": "code-flashcards.flashcardView",
          "name": "Create Flashcard",
          "type": "webview",
          "when": "code-flashcards.isAuthenticated"
        },
        {
          "id": "code-flashcards.loginView",
          "name": "Login",
          "type": "tree",
          "when": "!code-flashcards.isAuthenticated"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "code-flashcards.generateFlashcard",
          "when": "view == code-flashcards-snippets",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "code-flashcards.generateAllFlashcards",
          "when": "view == code-flashcards-snippets",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Code Flashcards",
      "properties": {
        "code-flashcards.supabase.url": {
          "type": "string",
          "default": "",
          "description": "The URL of your Supabase project."
        },
        "code-flashcards.supabase.anonKey": {
          "type": "string",
          "default": "",
          "description": "The anon public key for your Supabase project."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "dev-update": "npm version patch && vsce package",
    "install-local": "code --install-extension *.vsix --force",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/highlight.js": "^10.1.0",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.3",
    "@types/node": "^24.10.0",
    "@types/uuid": "8.3.2",
    "@types/vscode": "^1.83.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.80.0",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "markdown-it-highlightjs": "^4.2.0",
    "uuid": "8.3.2"
  }
}
